<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inputcont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/input_cor_text_lat"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="@string/input_latitude"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:gravity="center" />

        <EditText
            android:id="@+id/input_lat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/input_cor_text_lon"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="@string/input_longitude"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:gravity="center" />

        <EditText
            android:id="@+id/input_long"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/input_cor_text_alt"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="@string/input_altitude"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:gravity="center" />

        <EditText
            android:id="@+id/input_alt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="LabelFor" />
    </LinearLayout>

</LinearLayout>